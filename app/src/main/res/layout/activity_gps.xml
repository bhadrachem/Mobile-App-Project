<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_gps"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bhadraother.myapplication.GPSActivity">

    <Button
        android:text="Start GPS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/startGPSButton"
        android:onClick="startGPS"/>

    <TextView
        android:text="Lon:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lonTextView"
        android:layout_below="@+id/latTextView"
        android:layout_alignStart="@+id/latTextView" />

    <TextView
        android:text="Lat:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/latTextView"
        android:layout_below="@+id/startGPSButton"
        android:layout_alignLeft="@id/startGPSButton" />

    <EditText
        android:id="@+id/lonEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/lonTextView"
        android:layout_toRightOf="@id/lonTextView"
        android:inputType="number" />

    <EditText
        android:id="@+id/latEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/latTextView"
        android:layout_toRightOf="@id/latTextView"
        android:inputType="number" />
</RelativeLayout>
